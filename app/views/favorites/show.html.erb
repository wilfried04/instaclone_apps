<% if logged_in? %>
     <div class="container">
      <table>
        <tbody>
          <% @favorite.each do |favorite| %>
        <tr>
          <td><%=favorite.blog.user.name %></td>
        </tr>
        <tr>
          <td><%=image_tag favorite.blog.image.url,:class=>"img-fluid rounded mx-auto d-block",
                                                   :alt=>"Responsive image" %></td>
        </tr>
        <tr>
          <td><%=favorite.blog.content %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
<% else %>
  <span class="badge badge-pill badge-danger"><%= link_to "Log in", new_session_path%></span>
  <span class="badge badge-pill badge-warning"><%= link_to "Sign Up", new_user_path%></span>
<% end %>
</div>
