<div class="container">
  <% unless logged_in? %>
    <%=render 'form' %>
    <% else %>
    <p><strong>Alerte</strong>: you are already logged in </p>
    <span class="badge badge-pill badge-warning"><%= link_to "your Profile", user_path(current_user.id) %></span>
    <span class="badge badge-pill badge-danger"><%= link_to "Logout", session_path(current_user.id), method: :delete, data:{confirm:'Are you sure ?'} %></span>
  <% end %>
</div>
