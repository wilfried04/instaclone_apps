<div class="container">
  <div class="jumbotron">
    <h4 class="display-4">Welcomme to you :@<%= @user.name %></h4>
    <div class="display-4"><%= image_tag @user.image.url,:class=>"img-fluid rounded mx-auto d-block",
                                             :alt=>"Responsive image" %></div>

    <hr class="my-4">
    <p>Your mail is: <em><%= @user.email %></em></p>
    <hr class="my-4">
    <table>
      <tbody>
        <tr class="pill">
          <td class="badge badge-pill badge-info"><%=link_to "Edit",edit_user_path(@user.id),data: { confirm: 'Are you sure?'} %></td><br>
          <td class="badge badge-pill badge-warning"><%=link_to "Destroy",user_path(@user.id),method: :delete, data: { confirm: 'Are you sure?'} %></td><br>
          <td class="badge badge-pill badge-dark"><%=link_to "Favorites",favorite_path(@user.id)%></td>
        </tr>
      </tbody>
    </table>

    </div>
